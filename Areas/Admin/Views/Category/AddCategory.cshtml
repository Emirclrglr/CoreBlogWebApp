@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Kategori Ekle</h5>
        </div>
        <div class="ibox-content">
            <form method="post">

                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">Kategori Adı</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="CategoryName" required></div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Kategori İkon</label>
                        <div class="col-sm-10"><input type="text" class="form-control" name="CategoryIcon" required></div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Açıklama</label>
                        <div class="col-sm-5"><textarea type="text" class="form-control" rows="6" name="CategoryDescription" required></textarea></div>
                    </div>
                    <div class="hr-line-dashed"></div>


                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-primary btn-sm" type="submit">+ Ekle</button>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</div>


