@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Kullanıcılar</h5>
            </div>
            <div class="ibox-content">

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Kullanıcı</th>
                            <th>Rol Ata</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>@item.UserName</td>
                                <td><a href="/Admin/AdminRole/AssignRole/@item.Id" class="btn btn-outline-info">Rol Ata</a></td>
                            </tr>
                        </tbody>

                    }
                </table>
                <a href="/Admin/AdminRole/Index/" class="btn btn-outline-primary">Rol Listesine Dön</a>
            </div>
        </div>
    </div>
</div>


