@using EntityLayer.Concrete
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Roller</h5>
            </div>
            <div class="ibox-content">

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td align="center" style="font-weight: bold;">#</td>
                            <th>Rol</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td align="center">@item.Id</td>
                                <td>@item.Name</td>
                                <td><a href="/Admin/AdminRole/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Admin/AdminRole/UpdateRole/@item.Id" class="btn btn-outline-success">Düzenle</a></td>
                            </tr>
                        </tbody>

                    }
                </table>
                <a href="/Admin/AdminRole/AddRole/" class="btn btn-outline-info">+ Yeni Rol Ekle</a>
                <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-outline-primary">Kullanıcı Listesi</a>
            </div>
        </div>
    </div>
</div>

