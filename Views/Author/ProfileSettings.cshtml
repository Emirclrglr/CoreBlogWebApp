@model CoreBlogWebApp.Models.UserUpdateViewModel
@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Ayarları</h4>
            <form class="forms-sample" method="post" id="profileForm">
                @Html.HiddenFor(x => x.ImgUrl)
                <div class="form-group">
                    <label for="exampleInputName1">Ad</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="Firstname" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Soyad</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="Lastname" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="Username" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail adresi</label>
                    <input type="email" class="form-control" id="exampleInputEmail3" asp-for="Mail" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Yeni Şifre</label>
                    <input type="password" class="form-control" id="exampleInputEmail3" asp-for="Password" required>
                </div>
                <div class="form-group">
                    <label>Resim Yükle</label>
                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="file" class="form-control file-upload-info" asp-for="ImgUrl" placeholder="Resim Yükle">
                    </div>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Düzenle</button>
            </form>
        </div>
    </div>
</div>


