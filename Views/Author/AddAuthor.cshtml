@model CoreBlogWebApp.Models.AddProfilePicture
@{
    ViewData["Title"] = "AddAuthor";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Ayarları</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(x => x.AuthorId)
                <div class="form-group">
                    <label for="exampleInputName1">İsim</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="AuthorName" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail adresi</label>
                    <input type="email" class="form-control" id="exampleInputEmail3" asp-for="AuthorMail" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" asp-for="AuthorPassword" required>
                </div>
                <div class="form-group">
                    <label>Resim Yükle</label>
                    <input type="file" asp-for="AuthorImg" / class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Hakkımda</label>
                    <textarea class="form-control" id="exampleTextarea1" rows="8" asp-for="AuthorAbout" required></textarea>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>


