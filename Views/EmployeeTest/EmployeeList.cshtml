@using CoreBlogWebApp.Controllers
@model List<Class1>
@{
    ViewData["Title"] = "EmployeeList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/EmployeeTest/DeleteEmployee/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/EmployeeTest/UpdateEmployee/@item.Id" class="btn btn-outline-primary">Güncelle</a></td>
        </tr>
    }


</table>

<a href="/EmployeeTest/AddEmployee/" class="btn btn-outline-success">Yeni Çalışan Ekle</a>

